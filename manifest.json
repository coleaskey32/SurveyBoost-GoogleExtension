{
  "manifest_version": 3,
  "name": "Survey Boost",
  "version": "1.0",
  "description": "Auto-fill surveys.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.surveyjunkie.com/login", "https://www.surveyjunkie.com/?login", "https://app.surveyjunkie.com/public/signin"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]

}
